      <p class="text-left">{{this.message}}</p>

    </div>
    <div class="col-md-1 d-flex justify-content-center align-items-center">
      <form action="/deleteMessage/{{this.id}}" method="post">
        <button type="button" class="btn btn-labeled btn-danger" data-bs-toggle="modal" data-bs-target="#exampleModal4">
        <span class="btn-label"><i class="fa fa-check m-1"></i></span>Suprimer
      </button>
      </form>
      
    </div>

    <div class="col-md-1 d-flex justify-content-center align-items-center">
      <button type="button" class="btn btn-labeled btn-light" data-bs-toggle="modal" data-bs-target="#exampleModal4">
        <span class="btn-label"><i class="fa fa-check m-1"></i></span>Répondre
      </button>
    </div>
  </div>
  {{/each}}
  {{!--------------------------------------------------------------------------}}
  {{!--------------------------------------------------------------------------}}
  {{!-- Fin Message recus --}}
  {{!--------------------------------------------------------------------------}}
  {{!--------------------------------------------------------------------------}}

</div>





