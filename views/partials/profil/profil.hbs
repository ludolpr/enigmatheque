<div class="col-md-12 mh100 decallageTop">

  <div class="col-md-12 text-center mb-5">
    <h1 class="container border-bottom border-secondary border-3">Votre profil
      personnel</h1>
  </div>

  <div class="d-flex justify-content-center">
    <img
      src="/assets/images/{{profil.avatar}}"
      class="img500 border-success rounded-4 img-thumbnail img-fluid"
      alt="avatar d'un utilisateur du site d'énigme"
    />
  </div>
  <div class="col-md-12 d-flex justify-content-center row">
    <div class="col-md-12 d-flex justify-content-center mb-3 mt-3">
      <h2>Nom d'utilisateur: {{profil.name}}</h2>
    </div>
    <div class="col-md-12 d-flex justify-content-center mb-3">
      <h3>Ton email: {{profil.email}}</h3>

    </div>
    <div class="bioBG p-3 m-5 w-50">
      <div class="col-md-12 d-flex justify-content-center mb-3">
        <h4>Votre biographie: </h4>

      </div>
      <div class="col-md-12 d-flex justify-content-center mb-3">
        <p>
          {{{profil.bio}}}
        </p>
      </div>
    </div>

  </div>

  <!-- Full screen modal -->
  <!-- Button  modal -->
  <div class="d-flex justify-content-center">
    <button
      type="submit"
      class="btn btn-secondary mb-4"
      data-bs-toggle="modal"
      data-bs-target="#exampleModal"
    >
      Modifier
    </button>
  </div>

  <form
    action="/profilEdit/{{profil.id}}?_method=PUT"
    method="post"
    enctype="multipart/form-data"
  >
    <!-- Modal -->
    <div
      class="modal fade"
      id="exampleModal"
      tabindex="-1"
      aria-labelledby="exampleModalLabel"
      aria-hidden="true"
    >
      <div class="modal-dialog modal-fullscreen">
        <div class="modal-content bg-dark">
          <div class="modal-header">
            <h5 class="modal-title" id="exampleModalLabel">Modification de votre
              profil :
              {{upper profil.name}}</h5>
            <button
              type="button"
              class="btn-close bg-light"
              data-bs-dismiss="modal"
              aria-label="Close"
            ></button>
          </div>
          <div class="modal-body">
            <div
              class="col-md-12 text-center mb-3 d-flex justify-content-center"
            >

              <img
                src="/assets/images/{{profil.avatar}}"
                class="img500 border-success rounded-4 img-thumbnail img-fluid"
                alt="avatar d'un utilisateur du site d'énigme"
              />

            </div>
            <div class="col-md-12 d-flex justify-content-center">

              <input
                type="file"
                id="avatar"
                class="border border-3 border-success mt-3 mb-3"
                name="avatar"
                accept="image/png, image/jpeg"
                value="{{profil.avatar}}"
              />
              <i
                class="fa-regular fa-circle-check d-flex align-items-center ms-2"
              ></i>
            </div>
            <div
              class="container col-md-12 text-center d-flex justify-content-center mb-3"
            >

              <input
                type="text"
                class="border border-3 border-success"
                name="name"
                value="{{profil.name}}"
                placeholder="nom d'utilisateur"
              />
              <i
                class="fa-regular fa-circle-check d-flex align-items-center ms-2"
              ></i>
            </div>
            <div
              class="container col-md-12 text-center d-flex justify-content-center mb-3"
            >

              <input
                type="email"
                class="border border-3 border-success"
                name="email"
                value="{{profil.email}}"
                placeholder="email"
              />
              <i
                class="fa-regular fa-circle-check d-flex align-items-center ms-2"
              ></i>
            </div>
            <div
              class="container col-md-12 text-center d-flex justify-content-center mb-3"
            >

              <input
                type="password"
                class="border border-3 border-success"
                name="password"
                placeholder="mot de passe"
              />
              <i
                class="fa-regular fa-circle-check d-flex align-items-center ms-2"
              ></i>
            </div>
            <div
              class="container col-md-12 text-center d-flex justify-content-center mb-3"
            >

              <input
                type="password"
                class="border border-3 border-success"
                name="confPassword"
                placeholder="confirmer mot de passe"
              />
              <i
                class="fa-regular fa-circle-check d-flex align-items-center ms-2"
              ></i>
            </div>

            <div class="col-md-12 text-center container mb-3">
              <h2 class="mb-3 mt-3 text-light">Votre biographie</h2>

              <div id="container-fluid">
                <textarea
                  value="{{profil.bio}}"
                  name="bio"
                  id="editorBio"
                  cols="30"
                  rows="10"
                >{{profil.bio}}</textarea>

              </div>
              <script src="/assets/js/build/ckeditor.js"></script>
              <script type="text/javascript">
                ClassicEditor.create( document.querySelector( '#editor' ) )
                .then( editor => { window.editor = editor; } ) .catch( error =>
                { console.error( 'There was a problem initializing the editor.',
                error ); } );
              </script>

            </div>
          </div>
          <div class="modal-footer d-flex justify-content-center">
            <div>
              <button
                type="submit"
                class="btn btn-secondary mb-4"
              >Sauvegarder</button>
            </div>
          </div>
        </div>
      </div>
    </div>
  </form>

</div>