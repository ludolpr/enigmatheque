<form action="/insertEnigme" method="post"> 
  <div class="container bg-secondary text-dark p-5 mb-6 mt-2">
    <div class="row">

      <label for="titre" class="form-label  p-2 ps-0">Votre titre</label>
      <input type="text" class="form-control border-success align-items-center mb-3"
        placeholder="Titre de votre énigme" id="titre" aria-describedby="titre" name="titre" />

      <div class="col-md-12 p-0">
        {{!-- si il ne fonctionne pas ca vien des classe de categories --}}
        <p>Niveau de difficulté<br />
            <select name="difficulty" class="w-25 form-label wpcf7-form-control form-control wpcf7-select wpcf7-validates-as-required" aria-required="true" aria-invalid="false">
              <option value="1">Facile</option>
              <option value="2">Normal</option>
              <option value="3">Difficile</option>
            </select>
          </span>
      </div>
      
      <label for="content" class="form-label p-2 ps-0">Enigme que vous proposer</label>
      <textarea name="content" placeholder="Votre Enigme" class="border-success" id='content' cols="70"
        rows="15" name="content"></textarea>

      <label for="solus" class="form-label  p-2 ps-0">Réponse à votre énigme</label>
      <textarea name="solus" id="solus" placeholder="Votre Solution" class="mb-3 border-success" cols="70"
        rows="15" class="mt-2 mb-6" placeholder="Votre Solution" name="solus"></textarea>

      <button type="submit" class="mt-3 w-25 btn btn-primary mb-2 d-flex  justify-content-center" >Envoyer</button>

    </div>
  </div>
</form>
