<form action="/enigme" method="post" enctype="application/x-www-form-urlencoded">
  <div class="container bg-secondary text-dark p-5 mb-6 mt-2">
    <div class="row">
      <label for="titre" class="form-label  p-2 ps-0">Votre titre</label>
      <input type="email" class="form-control border-success align-items-center mb-3"
        placeholder="Titre de votre énigme" id="titre" aria-describedby="titre" name="titre" />
      <div class="col-md-12 p-0">
        <p>Niveau de difficulté<br />
          <span class="wpcf7-form-control-wrap menu-742 ">
            <select name="difficulty"
              class="form-label wpcf7-form-control form-control wpcf7-select wpcf7-validates-as-required"
              aria-required="true" aria-invalid="false">
              <option value="1">Facile</option>
              <option value="2">Normal</option>
              <option value="3">Difficile</option>
            </select>
          </span>
      </div>

      <label for="content" class="form-label p-2 ps-0">Enigme que vous proposer</label>
      <textarea name="Votre message ici" placeholder="Votre Enigme" class="border-success" id='content' cols="70"
        rows="15" name="content"></textarea>
      <label for="solus" class="form-label  p-2 ps-0">Réponse à votre énigme</label>
      <textarea name="Votre message ici" id="solus" placeholder="Votre Solution" class="mb-3 border-success" cols="70"
        rows="15 " class="mt-2 mb-6" placeholder="Votre Solution" name="solus"></textarea>
      <button type="submit" class="mt-3 w-25 btn btn-primary mb-2">Envoyer</button>

    </div>
